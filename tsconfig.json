{
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "module": "commonjs", // Resolve modules the node way
    "lib": ["dom", "es2017"], // Use newest ecma script features
    /* Outputs: */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es2017", // Target Node 10.x
    "importHelpers": true, // Use tslib for helper code
    /* Syntax: */
    "strict": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true
  }
}